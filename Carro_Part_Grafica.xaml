<Window x:Class="PruebaNo._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaNo._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/frontal3.jpg"/>
        </Grid.Background>
        <Button  Content="Iniciar" HorizontalAlignment="Left" Height="28" Margin="349,396,0,0" VerticalAlignment="Top" Width="79" Click="Inicar_Click" FontFamily="Times New Roman" FontSize="14"/>
        <TextBlock x:Name="lblR1" HorizontalAlignment="Left" Height="42" Margin="618,349,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="286" Background="White" FontFamily="Times New Roman" FontSize="14"/>
        <Button  Content="Apagar" HorizontalAlignment="Left" Height="28" Margin="349,356,0,0" VerticalAlignment="Top" Width="79" Click="Apagar_Click" FontFamily="Times New Roman" FontSize="14"/>
        <Button Content="Frenar" HorizontalAlignment="Left" Height="21" Margin="97,569,0,0" VerticalAlignment="Top" Width="101" Click="Frenar_Click" FontFamily="Times New Roman" FontSize="14"/>
        <Button Content="Acelerar" HorizontalAlignment="Left" Height="21" Margin="327,569,0,0" VerticalAlignment="Top" Width="101" Click="Acelerar_Click" FontFamily="Times New Roman" FontSize="14"/>
        <TextBlock x:Name="DatosCarro" HorizontalAlignment="Left" Height="94" Margin="735,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="247" Background="White" FontFamily="Times New Roman" FontSize="14"/>
        <Button Content="Datos del Carro" HorizontalAlignment="Left" Height="33" Margin="462,377,0,0" VerticalAlignment="Top" Width="103" Click="Datos_Click" FontFamily="Times New Roman" FontSize="14"/>
        <Label Content="Datos del Carro" HorizontalAlignment="Left" Height="27" Margin="735,-5,0,0" VerticalAlignment="Top" Width="168" FontFamily="Times New Roman" FontSize="14" Background="White" Visibility="Visible"/>

        <TextBox x:Name="TBFileName" FontSize="16" Width="218" Margin="602,462,0,0" VerticalAlignment="Top" TextWrapping="Wrap" HorizontalAlignment="Left" Height="23"/>
        <Button Content="Open" Click="BT_Click_Open" Margin="825,462,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="23"/>
        <Button FontSize="13" Content="Play" Margin="602,491,0,0" Click="BT_Click_Play" VerticalAlignment="Top" HorizontalAlignment="Left" Height="23" Width="61"/>
        <Button FontSize="13" Content="stop" Margin="758,491,0,0" Click="BT_Click_Pause" VerticalAlignment="Top" HorizontalAlignment="Left" Height="23" Width="61"/>
        <Button FontSize="13" Content="pausa" Margin="680,491,0,0" Click="BT_Click_Stop" VerticalAlignment="Top" HorizontalAlignment="Left" Height="23" Width="62"/>

    </Grid>
</Window>
